<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE spec [
<!ENTITY beaconsList SYSTEM "beacons.xml">
<!ENTITY hostsList SYSTEM "hosts.xml">
]>
<PingER version="3.0.0">

  <Configuration>

    <BeaconList>
      <param name="BeaconListURL" value="http://www-iepm.slac.stanford.edu/pinger/pinger3.xml"/>
      <param name="HttpGetBin" value="/usr/local/bin/lynx -source -dump %BeaconListURL%"/>
      <param name="RefreshInterval" value="1 week"/>
    </BeaconList>

    <System>
      <param name="MaxProcessCount" value="25"/>
      <param name="PingV4Cmd" value="/bin/ping -n -w %deadline% -c %count% -i %interval% -s %packetSize% -t %ttl%  %destination%"/>
      <param name="PingV6Cmd" value="/bin/ping6 -n -w %deadline% -c %count% -i %interval% -s %packetSize% -t %ttl%   %destination%"/>
      <param name="dnsV4Cmd" value="/usr/local/share/pinger/dnsV4Cmd.pl %destination%"/>
      <param name="dnsV6Cmd" value="/usr/bin/dig -t aaaa +short %destination%"/>
    </System>

  </Configuration>

  <Defaults>

    <param name="#host-defaults">
      <param name="Enabled" value="true"/>
      <param name="EnableDNSCache" value="true"/>
      <param name="LogType" value="full"/>
    </param>

    <param name="#pingset-default">
      <Ping id="#ping-small">
        <param name="TestProtocol" value="IPV4"/>
        <param name="TestPeriod" value="1800"/>
        <param name="TestOffsetType" value="Poisson"/>
        <param name="TestOffset" value="0"/>
        <param name="interval" value="1"/>
        <param name="count" value="10"/>
        <param name="packetSize" value="100"/>
        <param name="deadline" value="10"/>
        <param name="ttl" value="128"/>
      </Ping>
      <Ping id="#ping-large">
        <param name="TestProtocol" value="IPV4"/>
        <param name="TestPeriod" value="60"/>
        <param name="TestOffsetType" value="Poisson"/>
        <param name="TestOffset" value="30"/>
        <param name="interval" value="1"/>
        <param name="count" value="10"/>
        <param name="packetSize" value="1000"/>
        <param name="deadline" value="10"/>
        <param name="ttl" value="128"/>
      </Ping>
    </param>

    <param name="#alarm-defaults">
      <Alarm id="#alarm-email">
        <param name="Enabled" value="true"/>
        <param name="AlarmCmd" value="echo '%message%' | /bin/mail `whoami` -s 'PingER2 Error Message'"/>
        <param name="Snooze" value="true"/>
        <param name="TimeToNotification" value="12 hours"/>
      </Alarm>
    </param>

    <param name="#store-defaults">
      <Store id="#ma">
        <param name="Type" value="MA"/>
        <param name="URI" value="http://localhost:8080/axis/MeasurementArchive"/>
      </Store>
      <Store id="#rrd">
        <param name="Type" value="RRD"/>
        <param name="URI" value="file:///tmp/rrd.rrd"/>
      </Store>
    </param>

  </Defaults>


  <Hosts>

<!-- include beacons -->
&beaconsList;
 
<!-- include site specific hosts -->
&hostsList;

  </Hosts>


</PingER>
