<?xml version="1.0" encoding="UTF-8"?>
<!-- 
requestDir: directory where the request files live (relative to $PSHOME)
input: the name of the xml file containing the test request
description: a description of the test
expected output: a list of 1 or more xml tags that the reply should contain

-->

<perfSONAR-tests>
  <requestDir>/test_harness/requests</requestDir>

<!--  Topology Service request testing
-->
<!-- TSAddRequest.xml  TSQueryRequest-all.xml  TSQueryRequest.xml  TSReplaceRequest.xml  TSUpdateRequest.xml -->

  <test>
     <input>TSRequest/TSAddRequest.xml</input>
     <description>Add Topology Request</description>
     <expected_output>eventType</expected_output>
     <expected_output>datum</expected_output>
  </test>

  <test>
     <input>TSRequest/TSUpdateRequest.xml</input>
     <description>Update Topology Request</description>
     <expected_output>eventType</expected_output>
     <expected_output>datum</expected_output>
  </test>

  <test>
     <input>TSRequest/TSReplaceRequest.xml</input>
     <description>Replace Topology Request</description>
     <expected_output>eventType</expected_output>
     <expected_output>datum</expected_output>
  </test>

  <test>
     <input>TSRequest/TSQueryRequest.xml</input>
     <description>xQuery Topology Request</description>
     <expected_output>topology</expected_output>
  </test>

  <test>
     <input>TSRequest/TSQueryRequest-all.xml</input>
     <description>Query All Topology Request</description>
     <expected_output>topology</expected_output>
  </test>

</perfSONAR-tests>

