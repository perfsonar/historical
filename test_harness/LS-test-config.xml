<?xml version="1.0" encoding="UTF-8"?>
<!-- 
requestDir: directory where the request files live (relative to $PSHOME)
input: the name of the xml file containing the test request
description: a description of the test
expected output: a list of 1 or more xml tags that the reply should contain

-->

<perfSONAR-tests>
  <requestDir>/test_harness/requests</requestDir>

<!--  LS request testing
-->

  <test>
     <input>LSRequest/LSRegisterRequest.xml</input>
     <description> Test LS Register</description>
     <expected_output>key</expected_output>
     <expected_output>parameter</expected_output>
  </test>
  <test>
     <input>LSRequest/LSRegisterRequest-key.xml</input>
     <description> Test LS Register Key  </description>
     <expected_output>key</expected_output>
     <expected_output>parameter</expected_output>
  </test>
  <test>
     <input>LSRequest/LSQueryRequest.xml</input>
     <description> Test LS Query  </description>
     <expected_output>serviceType</expected_output>
  </test>
  <test>
     <input>LSRequest/LSKeepaliveRequest.xml</input>
     <description> Test LS Keepalive  </description>
     <expected_output>eventType</expected_output>
     <expected_output>datum</expected_output>
  </test>
  <test>
     <input>LSRequest/LSRegisterRequest-update.xml</input>
     <description> Test LS Register update  </description>
     <expected_output>key</expected_output>
     <expected_output>eventType</expected_output>
     <expected_output>parameter</expected_output>
  </test>

